#include <unistd.h>
#include <stdio.h>

char    ft_strcapitalize(char *str)
{
    int i;

    i = 1;
    while(str[i] != '\0')
    {
        if ((str[0] >= 97) && (str[0] <= 122))
        str[0] -= 32;
        if(str[i] == 32)
        {
            if (str[i +1] >= 48 && str[i +1] <= 57)
            str[i +1] += 0;
            else
            str[i +1] -= 32; 
        }
        if ((str[i] >= 0) && (str[i] <= 47) || (str[i] >= 58) && (str[i] <= 64) 
        || (str[i] >= 91) && (str[i] <= 96)
        || (str[i] >= 123) && (str[i] <= 127))
        str[i +1] -= 32; 
        i++;
    } 
    return(str);
}

int main(void)
{
    char    source[] = "salut, comment tu vas ? 42mots quarante-deux; cinquante+et+un";
    printf("%s", ft_strcapitalize(source));
}
